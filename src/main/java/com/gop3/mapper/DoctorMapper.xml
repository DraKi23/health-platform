<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gop3.mapper.DoctorMapper">
    <select id="getDoctorByOpenid" parameterType="String" resultType="com.gop3.po.Doctor">
        select * from health_doctor where wx_openid=#{openid}
    </select>
    <!--添加意医生注册信息入数据库-->
    <insert id="insertDoctor" parameterType="com.gop3.po.Doctor">
        insert into health_doctor(name,phone,hospital,address,introduce,credentials,wx_openid,icon,create_time)
        values(#{name},#{phone},#{hospital},#{address},#{introduce},#{credentials},#{wx_openid},#{icon},#{createTime})
    </insert>
</mapper>